// === Configura√ß√µes do Prisma ===
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// === Modelos do SmartClassroom ===

// üë§ Usu√°rio (professor)
model User {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senhaHash String
  turmas    Turma[]
  criadoEm  DateTime @default(now())

  @@map("user")
}

// üè´ Turma
model Turma {
  id          Int        @id @default(autoincrement())
  nome        String
  userId      Int
  user        User       @relation(fields: [userId], references: [id])
  alunos      Aluno[]
  grupos      Grupo[]
  chamadas    Chamada[]
  criadoEm    DateTime   @default(now())

  @@map("turma")
}

// üë®‚Äçüéì Aluno
model Aluno {
  id        Int        @id @default(autoincrement())
  nome      String
  turmaId   Int
  turma     Turma      @relation(fields: [turmaId], references: [id])
  grupos    Grupo[]    @relation("AlunosGrupos")
  presencas Presenca[]

  @@map("aluno")
}

// üë• Grupo de alunos
model Grupo {
  id       Int      @id @default(autoincrement())
  nome     String
  turmaId  Int
  turma    Turma    @relation(fields: [turmaId], references: [id])
  alunos   Aluno[]  @relation("AlunosGrupos")
  criadoEm DateTime @default(now())

  @@map("grupo")
}

// üïê Chamada (registro de presen√ßa)
model Chamada {
  id              Int        @id @default(autoincrement())
  dataHora        DateTime
  quantidadeAulas Int        @default(1)
  status          String     @default("ATIVA") // ATIVA, ENCERRADA, CANCELADA
  turmaId         Int
  turma           Turma      @relation(fields: [turmaId], references: [id])
  presencas       Presenca[]

  @@map("chamada")
}

// ‚úÖ Presen√ßa individual por aluno
model Presenca {
  id         Int       @id @default(autoincrement())
  presente   Boolean   @default(false)
  alunoId    Int
  chamadaId  Int
  aluno      Aluno     @relation(fields: [alunoId], references: [id])
  chamada    Chamada   @relation(fields: [chamadaId], references: [id])

  @@map("presenca")
}
